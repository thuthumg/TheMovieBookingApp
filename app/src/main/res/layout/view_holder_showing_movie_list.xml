<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/margin_card_medium_2"
    android:layout_marginTop="@dimen/margin_card_medium_2">

    <androidx.cardview.widget.CardView

        android:id="@+id/cvShowingMoviePicture"
        android:layout_width="@dimen/width_movie_cv"
        android:layout_height="@dimen/height_movie_cv"
        app:cardCornerRadius="@dimen/card_radius_movie_cv"
        app:cardElevation="@dimen/margin_card_medium_2">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/pic_now_showing" />

    </androidx.cardview.widget.CardView>


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvShowingMovieName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cvShowingMoviePicture"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_medium"
        android:text="Detective Pikachu"
        android:textColor="@color/black"
        android:textSize="@dimen/text_regular"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvNowShowingMovieTypeAndTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvShowingMovieName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginBottom="@dimen/margin_small"
        android:text="Mystery/Adventure . 1h 45m"
        android:textColor="@android:color/darker_gray"
        android:textSize="@dimen/text_smaller" />


</RelativeLayout>