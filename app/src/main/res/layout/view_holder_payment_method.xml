<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.appcompat.widget.AppCompatImageView
        android:layout_centerVertical="true"
        android:id="@+id/ivCreditCard"
        android:padding="@dimen/margin_medium_2"
        app:srcCompat="@drawable/ic_credit_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/ivCreditCard"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:textColor="@color/blackLight4"
            android:id="@+id/tvPaymentTitle"
            android:textStyle="bold"
            android:textSize="@dimen/text_regular"
            android:text="@string/lbl_credit_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvPaymentDesc"
            android:textColor="@color/whiteDark9"
            android:textSize="@dimen/text_smaller"
            android:text="@string/lbl_visa_master_card_jcb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>



</RelativeLayout>